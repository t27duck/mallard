<%# locals: (feed:) -%>

<% if feed.errors.any? %>
  <aside class="bg-red-200 text-red-900 rounded p-2 my-4">
    <ul>
      <% feed.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= form_with model: feed, class: "space-y-4" do |f| %>
  <% if feed.persisted? %>
    <div class="space-y-2">
      <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :title, required: true, class: "w-full rounded-md border-gray-300" %>
    </div>
  <% end %>

  <div class="space-y-2">
    <%= f.label :url, class: "block text-sm font-medium text-gray-700" %>
    <%= f.url_field :url, required: true, class: "w-full rounded-md border-gray-300" %>
  </div>

  <div class="space-y-2">
    <%= f.label :entry_limit, class: "block text-sm font-medium text-gray-700" %>
    <%= f.number_field :entry_limit, required: true, min: 0, step: 1, class: "w-full rounded-md border-gray-300" %>
    <p class="text-sm text-gray-500"><%= translate("help_texts.entry_limit") %></p>
  </div>

  <div class="flex">
    <%= f.check_box :sanitize, class: "h-4 w-4 border-gray-300 rounded mr-2" %>
    <%= f.label :sanitize, class: "block text-sm font-medium text-gray-700" %>
  </div>

  <div class="flex">
    <%= f.check_box :remove_tracking_params, class: "h-4 w-4 border-gray-300 rounded mr-2" %>
    <%= f.label :remove_tracking_params, class: "block text-sm font-medium text-gray-700" %>
  </div>

  <div class="flex justify-end">
    <%= link_to translate("buttons.cancel"), feeds_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <%= f.submit class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
