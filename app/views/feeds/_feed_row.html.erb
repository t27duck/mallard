<tr id="<%= dom_id(feed) %>" class="<%= cycle("bg-white", "bg-gray-50") %>">
  <td class="px-6 py-4 text-sm font-medium text-gray-900">
    <%= feed.title %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 hidden sm:table-cell">
    <%= feed.entries_count %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 hidden sm:table-cell">
    <%= feed.last_checked&.strftime("%b %-d, %I:%M%p") %>
  </td>
  <td class="px-6 py-4 text-right text-sm font-medium">
    <%= link_to "Fetch", fetch_feed_path(feed), class: "button-primary text-xs mb-2" %>
    <%= link_to "Edit", edit_feed_path(feed), class: "button-primary text-xs mb-2" %>
    <%= button_to "Delete", feed_path(feed), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "button-danger text-xs mb-2", form_class: "inline" %>
  </td>
</tr>
