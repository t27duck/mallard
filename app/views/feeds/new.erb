<h2>Add a Feed</h2>

<form action="/feeds" method="post" role="form">
  <div class="form-group">
    <label for="url">URL</label>
    <input type="text" class="form-control" name="url" value="<%= @feed.url %>">
  </div>
  <div class="form-group">
    <label for="sanitize">Sanitize</label>
    <select class="form-control" name="sanitize">
      <option value="true" <%= @feed.sanitize ? 'selected="selected"' : nil %>>Yes</option>
      <option value="false" <%= !@feed.sanitize ? 'selected="selected"' : nil %>>No</option>
    </select>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
