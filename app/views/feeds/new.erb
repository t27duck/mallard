<h2><%= I18n.translate("header.feeds_new") %></h2>

<form action="/feeds" method="post" role="form">
  <div class="form-group">
    <label for="url"><%= I18n.translate("feed.url") %></label>
    <input type="text" class="form-control" name="url" value="<%= @feed.url %>">
  </div>
  <div class="form-group">
    <label for="sanitize"><%= I18n.translate("feed.sanitize") %></label>
    <select class="form-control" name="sanitize">
      <option value="true" <%= @feed.sanitize ? 'selected="selected"' : nil %>><%= I18n.translate("form.yes_option") %></option>
      <option value="false" <%= !@feed.sanitize ? 'selected="selected"' : nil %>><%= I18n.translate("form.no_option") %></option>
    </select>
  </div>
  <button type="submit" class="btn btn-default"><%= I18n.translate("buttons.submit") %></button>
</form>
