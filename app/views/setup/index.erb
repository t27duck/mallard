<h2><%= I18n.translate("header.setup_index") %></h2>
<form action="/setup" method="post" role="form">
  <div class="form-group">
    <label for="password"><%= I18n.translate("session.password") %></label>
    <input type="password" name="password" required="true" class="form-control">
  </div>
  <div class="form-group">
    <label for="password_confirmation"><%= I18n.translate("session.password_confirmation") %></label>
    <input type="password" name="password_confirmation" required="true" class="form-control">
  </div>
  <button type="submit" class="btn btn-default"><%= I18n.translate("buttons.submit") %></button>
</form>
