<% if params[:refresh_body] %>
  <%= turbo_stream.update dom_id(@entry), partial: "entry_body", locals: { entry: @entry } %>
<% else %>
  <%= turbo_stream.update "entry-meta", partial: "entry_meta", locals: { entry: @entry } %>
<% end %>
<%= turbo_stream.update "unread-count", stats[:total_unread] %>
<%= turbo_stream.update "starred-count", stats[:total_starred] %>
<%= turbo_stream.update "mobile-unread-count", stats[:total_unread] %>
<%= turbo_stream.update "mobile-starred-count", stats[:total_starred] %>
